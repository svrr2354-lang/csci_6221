<Window x:Class="SmartScreener.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartScreener.UI"
        mc:Ignorable="d"
        Title="Smart Resume Screener"
        Height="650"
        Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#FFE6CC">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- header -->
            <RowDefinition Height="Auto"/>
            <!-- resume + buttons -->
            <RowDefinition Height="Auto"/>
            <!-- job title -->
            <RowDefinition Height="*"/>
            <!-- JD + score -->
            <RowDefinition Height="2*"/>
            <!-- resume preview -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!-- ===== Header ===== -->
        <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Margin="0,0,0,12">
            <TextBlock Text="Smart Resume Screener"
                       FontSize="22"
                       FontWeight="SemiBold"
                       Foreground="#111827"/>   
        </StackPanel>

        <!-- ===== Resume path + buttons ===== -->  
        <StackPanel Grid.Row="1" Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    Margin="0,0,0,8">
            <TextBlock Text="Resume file (.pdf or .txt):"
                       VerticalAlignment="Center"
                       Foreground="#111827"
                       Margin="0,0,6,0"/>

            <TextBox x:Name="ResumePathTextBox"
                     Width="520"
                     Margin="0,0,6,0"
                     IsReadOnly="True"
                     Padding="4"
                     Background="White"
                     BorderBrush="#D1D5DB"/>

            <Button Content="Browse..."
                    Width="90"
                    Margin="0,0,6,0"
                    Click="BrowseResume_Click"
                    Padding="4,2"
                    Background="#2563EB"
                    Foreground="White"/>

            <Button Content="Score Resume"
                    Width="100"
                    Margin="0,0,6,0"
                    Click="ScoreResume_Click"
                    Padding="4,2"
                    Background="#16A34A"
                    Foreground="White"/>

            <Button Content="Export PDF"
                    Width="110"
                    Margin="0,0,0,0"
                    Click="ExportPdf_Click"
                    Padding="4,2"
                    Background="#4B5563"
                    Foreground="White"/>
        </StackPanel>

        <!-- ===== Job title ===== -->
        <StackPanel Grid.Row="2" Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    Margin="0,0,0,10">
            <TextBlock Text="Job Title:"
                       VerticalAlignment="Center"
                       Foreground="#111827"
                       Margin="0,0,6,0"/>
            <TextBox x:Name="JobTitleTextBox"
                     Width="320"
                     Padding="4"
                     Background="White"
                     BorderBrush="#D1D5DB"/>
        </StackPanel>

        <!-- ===== Job description (left) ===== -->
        <GroupBox Grid.Row="3"
                  Grid.Column="0"
                  Header="Job Description"
                  Margin="0,0,8,8"
                  Background="White"
                  BorderBrush="#D1D5DB">
            <DockPanel>
                <TextBlock Text="Paste the full job description here, then click 'Score Resume'."
                           Margin="8,4,8,4"
                           Foreground="#6B7280"
                           DockPanel.Dock="Top"/>
                <TextBox x:Name="JobDescriptionTextBox"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"
                         TextWrapping="Wrap"
                         Margin="8"
                         Background="#F9FAFB"
                         BorderBrush="#E5E7EB"/>
            </DockPanel>
        </GroupBox>

        <!-- ===== Score + overlapping terms (right) ===== -->
        <GroupBox Grid.Row="3"
                  Grid.Column="1"
                  Header="Score &amp; Overlapping Terms"
                  Margin="8,0,0,8"
                  Background="White"
                  BorderBrush="#D1D5DB">
            <Grid Margin="8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Score row -->
                <StackPanel Grid.Row="0"
                            Orientation="Horizontal"
                            Margin="0,0,0,8">
                    <TextBlock Text="Match Score (0–1): "
                               FontWeight="SemiBold"
                               Foreground="#111827"/>
                    <TextBlock x:Name="ScoreTextBlock"
                               FontWeight="SemiBold"
                               Foreground="#2563EB"/>
                </StackPanel>

                <!-- Overlap list -->
                <StackPanel Grid.Row="1">
                    <TextBlock Text="Top overlapping terms in both resume and JD:"
                               FontSize="12"
                               Foreground="#6B7280"
                               Margin="0,0,0,4"/>
                    <Border BorderBrush="#E5E7EB"
                            BorderThickness="1"
                            CornerRadius="4">
                        <ListBox x:Name="OverlapListBox"
                                 Height="220"
                                 Padding="4"/>
                    </Border>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- ===== Resume preview (bottom) ===== -->
        <GroupBox Grid.Row="4"
                  Grid.ColumnSpan="2"
                  Header="Resume Preview"
                  Margin="0,8,0,0"
                  Background="White"
                  BorderBrush="#D1D5DB">
            <Grid>
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              Margin="8">
                    <TextBox x:Name="ResumePreviewTextBox"
                             IsReadOnly="True"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             Background="#F9FAFB"
                             BorderBrush="#E5E7EB"
                             Padding="4"/>
                </ScrollViewer>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
