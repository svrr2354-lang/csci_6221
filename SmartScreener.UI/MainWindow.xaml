<Window x:Class="SmartScreener.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartScreener.UI"
        mc:Ignorable="d"
        Title="Smart Resume Screener" Height="600" Width="900">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!-- Resume path + Browse -->
        <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Resume file (.pdf or .txt): " VerticalAlignment="Center"/>

            <TextBox x:Name="ResumePathTextBox"
             Width="500"
             Margin="5,0,5,0"
             IsReadOnly="True"/>

            <Button Content="Browse..."
            Width="80"
            Margin="0,0,5,0"
            Click="BrowseResume_Click"/>

            <Button Content="Score Resume"
            Width="110"
            Click="ScoreResume_Click"/>
        </StackPanel>


        <!-- Job title -->
        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Job Title: " VerticalAlignment="Center"/>
            <TextBox x:Name="JobTitleTextBox" Width="300" Margin="5,0,0,0"/>
        </StackPanel>

        <!-- Job description input (left) -->
        <GroupBox Grid.Row="2" Grid.Column="0" Header="Job Description" Margin="0,0,5,5">
            <Grid>
                <TextBox x:Name="JobDescriptionTextBox"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"
                         TextWrapping="Wrap" />
            </Grid>
        </GroupBox>

        <!-- Score + overlapping terms (right) -->
        <GroupBox Grid.Row="2" Grid.Column="1" Header="Score &amp; Overlapping Terms" Margin="5,0,0,5">
            <StackPanel Margin="5">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Match Score (0–1): " FontWeight="Bold"/>
                    <TextBlock x:Name="ScoreTextBlock" FontWeight="Bold" Foreground="DarkBlue"/>
                </StackPanel>

                <TextBlock Text="Top Overlapping Terms:" FontWeight="Bold" Margin="0,0,0,5"/>
                <ListBox x:Name="OverlapListBox" Height="200"/>
            </StackPanel>
        </GroupBox>


        <!-- Resume preview -->
        <GroupBox Grid.Row="3" Grid.ColumnSpan="2" Header="Resume Preview" Margin="0,40,0,0">

            <Grid>
                <TextBox x:Name="ResumePreviewTextBox"
                         IsReadOnly="True"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"/>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
